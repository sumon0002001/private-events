<h1 class="login-title">Login</h1>
<%= form_with model: @user, class: "login-form" do |f| %>
  <%= f.label :username, class: "username-label" %>
  <%= f.text_field :username, class: "username" %>
  <%= f.label :password, class: "password-label" %>
  <%= f.password_field :password, class: "password" %>
  <%= f.submit 'Login', class: "login-btn" %>
  <div class="register-btn">
    <%= link_to  "Register", new_user_path %>
  </div>
  <p class="flash"><%=flash.notice%></p>
<% end %>